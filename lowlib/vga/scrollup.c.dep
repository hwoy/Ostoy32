#include "vga.h"
#include "asm.h"


void scrollup(unsigned int nrow)
{
	unsigned int i,j,m,n;

	for(i=nrow,m=0;i<ROW;i++,m++)
	{
		for(j=0,n=0;j<COL;j++,n++)
		{
			vidmem[m*COL+n]=vidmem[i*COL+j];
		}
	}


	for(i=(ROW-nrow);i<ROW;i++)
	{
		for(j=0;j<COL;j++)
		{
			vidmem[i*COL+j]=vidmem[i*COL+j]&0xff00;
		}
	}

}
